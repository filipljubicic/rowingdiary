<h1>Ergo Scores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Distance</th>
      <th>Split</th>
      <th>Time</th>
      <th>Notes</th>
      <th>Created</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.ergos.each do |ergo| %>
      <tr>
        <td><%= ergo.distance %></td>
        <td><%= ergo.split %></td>
        <td><%= ergo.time %></td>
        <td><%= ergo.notes %></td>
        <td><%= ergo.created_at.strftime("%d %b %Y") %></td>
        <td><%= link_to 'Show', ergo, class: "btn btn-info btn-xs" %></td>
        <% if ergo.user == current_user %>
          <td><%= link_to 'Edit', edit_ergo_path(ergo), class: "btn btn-warning btn-xs" %></td>
          <td><%= link_to 'Destroy', ergo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Session', new_ergo_path, class: "btn btn-success" %>
<% end %>