<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
		<p>
		  <strong>Notes:</strong>
		  <%= @ergo.description %>
		</p>

		<p>
		  <strong>Distance:</strong>
		  <%= @ergo.distance %>
		</p>

		<p>
		  <strong>Split:</strong>
		  <%= @ergo.split %>
		</p>

		<p>
		  <strong>Time:</strong>
		  <%= @ergo.time %>
		</p>

		<p>
		  <strong>Rate:</strong>
		  <%= @ergo.rate %>
		</p>

		<p>
		  <strong>Watts:</strong>
		  <%= @ergo.watts %>
		</p>

		</div>
 		<div class="panel-body">
		<% if @ergo.user == current_user %>
			<%= link_to 'Edit', edit_ergo_path(@ergo), class: "btn btn-warning btn-xs" %> |
		<% end %>
		<%= link_to 'View All', ergos_path, class: "btn btn-info btn-xs" %>
     </div>
    </div>
  </div>
</div>

