<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1 class="panel-title">Show Weights</h1>
        <h3>
          <strong>Exercise:</strong>
          <%= @weight.exercise %>
        </h3>

        <h3>
          <strong>Reps:</strong>
          <%= @weight.reps %>
        </h3>

        <h3>
          <strong>Weight:</strong>
          <%= @weight.weight %>
        </h3>

        <h3>
          <strong>Sets:</strong>
          <%= @weight.sets %>
        </h3>

        <h3>
          <strong>Notes:</strong>
          <%= @weight.notes %>
        </h3>
        </div>
        <div class="panel-body">
          <% if @weight.user == current_user %>
          <%= link_to 'Edit', edit_weight_path(@weight), class: "btn btn-warning btn-xs" %> |
          <% end %>
          <%= link_to 'View All', weights_path, class: "btn btn-info btn-xs" %>
      </div>
    </div>
  </div>
</div>